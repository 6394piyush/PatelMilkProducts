<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patel Milk</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#30d1b6">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Patel Milk Products", "Index", "Home", new { area = "" }, new { @class = "navbar-brand",@style="color:white;font-weight:bold;font-size:22px" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home",new { controller = "Home" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                    <li>@Html.ActionLink("About", "About", "Home",new { controller = "Home" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home",new { controller = "Home" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("EMS", "Index", "Employees",new { controller = "Employees" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                        <li>@Html.ActionLink("AMS", "Index", "EmpAccounts",new { controller = "EmpAccounts" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                        <li>@Html.ActionLink("KMS", "Index", "Khalis",new { controller = "Khalis" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("MEMS", "Index", "MilkEntryUploads",new { controller = "MilkEntryUploads" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                        }
                    <li>@Html.ActionLink("Logout", "Logout", "Accounts",new { controller = "Accounts" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                    }
                    else
                    {
                    <li>@Html.ActionLink("Login", "Login", "Accounts",new { controller = "Accounts" },new { @style="color:white;font-weight:bold;font-size:22px"})</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    
    <div class="container body-content">

        @RenderBody()
        
        <footer>
            &copy; PateInc.
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
