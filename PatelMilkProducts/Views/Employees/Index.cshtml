@model IEnumerable<PatelMilkProducts.Models.Employees>
    @using PatelMilkProducts.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")

    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>

    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    
    <script>
         

        $(document).ready(function () {
           
            //Dropdownlist Selectedchange event
            $("#SelectVillage").change(function () {
                $("#VillageMembers").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetVillages")',
                    dataType: 'json',
                    data: { VName: $("#SelectVillage").val() },
                    success: function (vil) {

                        $("#VillageMembers").empty();
                        // states contains the JSON formatted list
                        // of states passed from the controller
                        $.each(vil, function (i, member) {
                            $("#VillageMembers").append("<tr><td>" + member['Name'] + "</td><td>" + member['FatherName'] + "</td><td>" + member['Village'] + "</td><td>" + member['Contact'] + "</td><td><a href='/Employees/Edit/" + member['Id'] + "'>Edit|</a></td><td><a href='/OverallDetails/Index/" + member['Id'] + "'>Details|</a></td><td><a href='/Employees/Delete/" + member['Id'] + "'> Delete</a></td></tr>");

                        });
                    },
                    error: function (ex) {
                        alert('Failed to retrieve states.' + ex);
                    }
                });
                return false;
            })
        });
    </script>
</head>
<body>
    <hr />
    <button class="btn">
        @Html.ActionLink("Create New", "Create")
    </button>
    <hr />
    <p>
        @Html.DropDownList("SelectVillage", new SelectList(Enum.GetValues(typeof(Village))), "--Select--Village--", new { @class = "form-control" })
    </p>
    <table class=" table" id="EmployeeTable" > 
        <thead>
            <th>Name</th>
            <th>Father Name</th>
            <th>Village</th>
            <th>Contact</th>
            <th>Actions</th>
        </thead>
        <tbody id="VillageMembers">
            <tr><td>No Records to Display. Please select a Village From the list above</td></tr>
        </tbody>
    </table>
    

</body>
</html>
